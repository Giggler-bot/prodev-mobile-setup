{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",        // ✅ Required to support paths
    "paths": {
      "@/*": ["./*"]       // ✅ This maps "@/styles/..." to root/styles/...
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
